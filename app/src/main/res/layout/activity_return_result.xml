<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.comlu.navinsandroidtutorial.srm_billingapp.ReturnResultActivity"
    android:dividerPadding="5dp"
    android:showDividers="middle|beginning|end">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:showDividers="beginning|end"
        android:weightSum="5"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/resultvalue"
            android:layout_weight="3"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="2"
            android:id="@+id/textView2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:weightSum="5"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/resultValue1"
            android:layout_weight="3"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="2"
            android:id="@+id/textView4" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/mathplus"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton1"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/mathminus"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton2"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/mathdivde"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton3"
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/mathmultipy" />
    </GridLayout>

</LinearLayout>
